{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-tx-origin": "error",
    "avoid-sha3": "warn",
    "avoid-suicide": "error",
    "avoid-throw": "warn",
    "no-assign-params": "error",
    "no-complex-fallback": "warn",
    "no-inline-assembly": "error",
    "func-visibility": ["error", {"ignoreConstructors": true}],
    "security/no-block-members": "warn",
    "security/no-low-level-calls": "error",
    "security/no-tx-origin": "error"
  }
}
